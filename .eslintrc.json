{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "react/react-in-jsx-scope": "off", // Para versões do React 17+
    "quotes": ["error", "single"], // Forçar uso de aspas simples
    "semi": ["error", "always"], // Forçar uso de ponto e vírgula
    "indent": ["error", 2], // Forçar indentação de 2 espaços
    "react/prop-types": "off" // Desativar verificação de prop-types (se você estiver usando TypeScript)
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
